<%if !session[:user_id]%>

<div id='welcomeBox'>
<div id='hello'>Hello</div>
<div id='underHello'>BlogDuck, for the friendly folk.</div>
</div>

<div class='loginBox'>

<div class='logIn'>
<h6>Login</h6>


<form class='createUser' method='post' action='/login'>
<input type='text' name ='username' placeholder='user name' > 
<input type='text'name ='password' placeholder='password' > 
<input id='loginSubmit' type='submit' value='Login'> 
</form>
</div>

<div class='centerSplit'>
<p id='pBox'>or</p>
</div>

<div>
<h6>Create User</h6>
<form class='createUser' method='post' action='/signup'>
<input type='text' name ='username' placeholder='user name' > 
<input type='text'name ='password' placeholder='password' > 
<input id='createSubmit' type='submit' value='Create'> 

</form>
</div>


</div>
<%end%>

<% if session[:user_id] %>

<h3 class='headerText'></h3>



<% @blogs.all.reverse[0..5].each do |x|%>
<div class='displayWrap'>

<div class='blogTitle'><a href="/blogs/<%=x.id%>" style="text-decoration:none";><%=x.title%></a></div>

<div class='infoBox'>
<hr>
<a href="users/<%= x.user_id%>"><%=x.user.username%></a>
<hr>
Date
<hr>

</div>
<div class='blogText'><%=x.content%></div>

</div>
<hr>


<% end %>


<%end%>




